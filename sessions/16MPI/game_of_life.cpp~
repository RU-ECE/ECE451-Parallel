#include <mpi.h>

#include <vector>
#include <iostream>

int main() {
    MPI_Init(nullptr, nullptr);

    int world_size;
    MPI_Comm_size(MPI_COMM_WORLD, &world_size);

    int world_rank;
    MPI_Comm_rank(MPI_COMM_WORLD, &world_rank);

    std::cout << "Hello from process " << world_rank << " of " << world_size << std::endl;

    MPI_Finalize();
    return 0;
}